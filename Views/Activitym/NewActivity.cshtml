<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Activity</title>
</head>
<body>
    @model Activitym
    <div>
        @* <a href="/Dashboard">Dashboard</a> | <a href="/logout">LogOut</a> *@
        <p><a asp-action="Dashboard" asp-controller="Activitym">Home</a> |
        <a asp-action="Logout" asp-controller="Home">LogOut</a></p> 
    </div>
    <h1>Dojo Activity Center</h1>

    <div class="text-center">
        
        <div class="col-md-6">
            <h3>Create an Activity</h3>
        </div>

        <div class="col-md-6">
            <form asp-action="CreateActivitym" asp-controller="Activitym" method="POST">

                <div>
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" style="color: red;"></span> <br />
                </div>

                <div>
                    <label asp-for="Date"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" style="color: red;"></span> <br />
                </div>

                <div>
                    <label asp-for="Time"></label>
                    <input asp-for="Time" class="form-control" />
                    <span asp-validation-for="Time" style="color: red;"></span> <br />
                </div>

                <div>
                    <label asp-for="Duration"></label>
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" style="color: red;"></span> <br />
                </div>
                <div>
                    <label ></label>
                    <select asp-for="Hm">
                    <option value="Hours">Hours</option>
                    <option value="Minutes">Minutes</option>
                     <option value="Days">Days</option>

                    </select><br>
                </div>
                <div>
                    <label asp-for="Dis"></label>
                    <textarea asp-for="Dis" class="form-control" ></textarea>
                    <span asp-validation-for="Dis" style="color: red;"></span> <br />
                </div>

                <div>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>

            </form>
        </div>


    </div>
</body>
</html>