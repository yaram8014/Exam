@model User
    <div>

        <h4> Register </h4>

        <form asp-action="Register" asp-controller="Home" method="POST">

            <div>
                <label asp-for="FirstName"> Name : </label> 
                <input asp-for="FirstName" class="form-control" placeholder="Name" />
                <span asp-validation-for="FirstName" style="color: red;"></span> <br />
            </div>

           

            <div>
                <label asp-for="Email">Email :</label> 
                <input asp-for="Email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Email" style="color: red;"></span><br/>
            </div>

            <div>
                 <label asp-for="Password">Password :</label> 
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" style="color: red;"></span><br/>
            </div>

            <div>
                <label asp-for="Confirm">Confirm PW : </label> 
                <input asp-for="Confirm" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="Confirm" style="color: red;"></span><br/>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            
        </form>
    </div>